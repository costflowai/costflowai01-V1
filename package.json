{
  "name": "costflowai",
  "version": "1.0.0",
  "description": "CostFlowAI - Professional cost calculation and analysis platform",
  "type": "module",
  "scripts": {
    "build:blog": "node tools/build_blog.mjs",
    "build:search": "node tools/build_search_index.mjs",
    "build:calculators": "node tools/build_calculator_pages.mjs",
    "build:css": "node tools/build_css.mjs",
    "build:assets": "node tools/optimize_assets.mjs && node tools/inline_critical_css.mjs",
    "build:nonce": "node tools/inject_nonce.mjs",
    "build:performance": "npm run build:css && npm run build:assets && npm run build:nonce",
    "build": "npm run build:blog && npm run build:search && npm run build:calculators && (npm run build:performance || echo 'Performance build completed with warnings')",
    "test": "npx jest",
    "test:registry": "npx jest tests/registry.spec.ts",
    "test:e2e": "npx playwright test",
    "test:e2e:headed": "npx playwright test --headed",
    "dev": "node server.js",
    "deploy": "netlify deploy --prod"
  },
  "keywords": [
    "cost-calculation",
    "analysis",
    "financial-tools",
    "netlify"
  ],
  "author": "CostFlowAI Team",
  "license": "MIT",
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@playwright/test": "^1.40.0",
    "@types/jest": "^29.5.5",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.1.2",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "gray-matter": "^4.0.3",
    "marked": "^9.1.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "testPathIgnorePatterns": [
      "tests/e2e/"
    ],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "transform": {
      "^.+\\.ts$": [
        "ts-jest",
        {
          "useESM": true
        }
      ]
    },
    "transformIgnorePatterns": [
      "node_modules/(?!(.*(\\.(mjs|js))$))"
    ]
  }
}
